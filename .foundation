alias vi=nvim
alias lzg=lazygit
alias lzd=lazydocker
alias y=yazi
alias gdu=gdu-go
alias ls=eza
alias la="ls -lah"
alias gst="git status"
alias gd="git diff"
alias gp="git push"
alias ga="git add"
alias gcam="git commit --all --message"


# enable vim motions in shell text
set -o vi

export API_TIMEOUT_MS=900000 

## fzf h4x...
# 1. Load fzf integration first
source <(fzf --zsh)

# 2. Set environment variables (order here is less critical, but good for organization)
export FZF_DEFAULT_COMMAND='fd --type f --strip-cwd-prefix --hidden --follow --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# 3. Override completion functions LAST to ensure they take precedence
_fzf_compgen_path() {
  fd --hidden --follow --exclude ".git" . "$1"
}

_fzf_compgen_dir() {
  fd --type d --hidden --follow --exclude ".git" . "$1"
}

eval "$(zoxide init zsh --cmd cd)"
eval "$(direnv hook zsh)"
eval "$(starship init zsh)"

